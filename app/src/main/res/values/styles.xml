<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RobotScouter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RobotScouter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotScouter.NoActionBar.TransparentStatusBar"/>

    <style name="RobotScouter.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="RobotScouter.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotScouter.Text.HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="RobotScouter.Text.ErrorText">
        <item name="android:textColor">@color/errorColor</item>
    </style>

    <style name="RobotScouter.Tutorial">
        <item name="backgroundColour">@color/colorPrimary</item>
    </style>

    <style name="RobotScouter.Tutorial.Menu" parent="RobotScouter.Tutorial">
        <item name="focalColour">@color/colorAccent</item>
    </style>

    <style name="RobotScouter.Metric">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
