<resources>

    <style name="RobotScouter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="RobotScouter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotScouter.NoActionBar.TransparentStatusBar"/>

    <style name="RobotScouter.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="RobotScouter.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotScouter.Text.HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="RobotScouter.Text.ErrorText">
        <item name="android:textColor">@color/errorColor</item>
    </style>

</resources>
