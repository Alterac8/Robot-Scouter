<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <item
        android:bottom="2dp"
        android:end="2dp"
        android:start="2dp"
        android:top="2dp"
        tools:targetApi="M">
        <shape android:shape="oval">
            <solid android:color="#F5F5F5"/>

            <size
                android:width="44dp"
                android:height="44dp"/>
        </shape>
    </item>

    <item
        android:drawable="@drawable/shortcut_ic_add_blue_24dp"
        android:gravity="center"/>
</layer-list>
