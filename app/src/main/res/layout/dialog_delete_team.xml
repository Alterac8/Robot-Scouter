<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/RobotScouter.Dialog.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message"
            style="@style/RobotScouter.BottomSheet.Text"
            android:text="Hello World!" />

        <com.supercilex.robotscouter.util.ui.views.SupportVectorDrawablesTextView
            android:id="@+id/delete"
            style="@style/RobotScouter.BottomSheet.Button"
            android:text="@string/delete"
            app:drawableStartCompat="@drawable/ic_delete_forever_black_24dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
