<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <include layout="@layout/scout_template_base_reorder"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/spinner_name"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/spinner"
        app:layout_constraintLeft_toRightOf="@id/reorder"
        app:layout_constraintRight_toLeftOf="@id/spinner"
        tools:ignore="UnknownIdInLayout"
        tools:text="Example"/>

    <include layout="@layout/scout_base_spinner"/>

</android.support.constraint.ConstraintLayout>
